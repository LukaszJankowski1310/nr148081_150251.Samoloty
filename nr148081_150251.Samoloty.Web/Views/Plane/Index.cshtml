@using nr148081_150251.Samoloty.Web.Helpers;
@using nr148081_150251.Samoloty.Web.Models.Plane

@model IEnumerable<PlaneViewModel>
@{
    ViewData["Title"] = "Samoloty";
}

<div class="container mt-4">
    <div class="row">
        <div class="col">
            <h2>Samoloty</h2>
        </div>

    @*     <div class="col-md-6">
            <label for="filterField" class="mr-2">Filter by:</label>
            <select id="filterField" class="form-control">
                <option value="Model">Model</option>
                <option value="Type">Type</option>
                <option value="CompanyName">Company</option>
                <!-- Add more options based on your PlaneViewModel properties -->
            </select>
        </div> *@

        <div class="col text-right">
            <a class="btn btn-success" asp-action="Create">Dodaj nowy samolot</a>
        </div>
    </div>
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th><a asp-action="Index" asp-route-sortField="Model">Model</a></th>
                <th><a asp-action="Index" asp-route-sortField="Type">Typ</a></th>
                <th><a asp-action="Index" asp-route-sortField="CompanyName">Producent</a></th>
                <th>Maksymalana prędkość</th>
                <th>Akcja</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var plane in Model)
            {
                <tr>
                    <td>@plane.Model</td>
                    <td>@plane.Type.GetDisplayName()</td>
                    <td>@plane.CompanyName</td>
                    <td>@plane.MaximumSpeed</td>
                    <td>
                        <div class="btn-group">
                            <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@plane.Id">Edit</a>
                            <span style="margin-left: 5px;"></span>
                            <form asp-action="Delete" asp-route-id="@plane.Id" method="post" onsubmit="return confirm('Are you sure you want to delete this plane?');">
                                <input type="hidden" name="_method" value="DELETE" />
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>


